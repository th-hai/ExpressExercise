extends ../layouts/common

block content
  nav(class="navbar navbar-expand-lg navbar-light bg-light")
    a(class="navbar-brand" href="/") Home
    ul(class="navbar-nav")
      li(class="nav-item")
        a(class="nav-link" href="/books") Books
      li(class="nav-item")
        a(class="nav-link" href="/users") Users
      li(class="nav-item")
        a(class="nav-link" href="/transactions") Transactions  
  h2(class="ml-3") Transaction Detail
  div(class="card-body")
    h5(class="card-title") User name: 
      span= user.name
    p(class="card-text") Book: 
      span= book.title
    p(class="card-text") Complete: 
      if transaction.isComplete
        span= 'Yes'
      else
        span= 'No'
    a(href="/books", class="btn btn-primary") Go back
  