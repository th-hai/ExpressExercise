extends ../layouts/common

block content
  h2(class="ml-3 mb-3") Add a new user
  if errors
        each error in errors
            .alert.alert-danger= error
      
  form(action="/users/create", method="POST", class="mx-3")
      h4 User Name:     
      input(type="text", class="form-control mb-2", name="name", value=values ? values.name : "")
      h4 Avatar URL:     
      input(type="text", class="form-control mb-2", name="avatarUrl", value=values ? values.avatarUrl : "")
      h4 Email:     
      input(type="text", class="form-control mb-2", name="email", value=values ? values.email : "")
      h4 Password:     
      input(type="password", name="password", value=values ? values.password : "", class="form-control mb-2")
      h4 Phone Number:     
      input(type="text", class="form-control mb-2", name="phone", value=values ? values.phone : "")
      br
      button(class="btn btn-outline-success my-2 my-sm-0") Create