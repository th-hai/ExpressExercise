extends ../layouts/common

block content
  h2(class="ml-3 mb-3") Add a new user
  if errors
        each error in errors
            .alert.alert-danger= error
  form(action="/users/create", method="POST", class="d-flex flex-columnml-3")

       Name:     
      input(type="text", name="name", value=values ? values.name : "", class="form-control mr-sm-2 ml-3 mr-2")
      h4 Email:     
      input(type="text", name="email", value=values ? values.email : "", class="form-control mr-sm-2 ml-3 mr-2")
      h4 Password:     
      input(type="password", name="password", value=values ? values.password : "", class="form-control mr-sm-2 ml-3 mr-2")
      button(class="btn btn-outline-success ml-2 mr-2 my-sm-0") Create 