extends ../layouts/common

block content
  nav(class="navbar navbar-expand-lg navbar-light bg-light")
    a(class="navbar-brand" href="/") Home
    ul(class="navbar-nav")
      li(class="nav-item")
        a(class="nav-link" href="/books") Books
      li(class="nav-item")
        a(class="nav-link" href="/users") Users
      li(class="nav-item")
        a(class="nav-link" href="/transactions") Transactions  
  h1(class="ml-3") Users List
  a(class="btn btn-info btn-sm ml-3 mb-2", href="/users/create") New user
  form(action="/users/search", method="GET", class="d-flex")
      input(type="text", name="q", placeholder="User name ...", class="form-control mr-sm-2 ml-3")
      button(class="btn btn-outline-success my-2 my-sm-0 mr-2") Search
  ul
      each user in users
          li(class="mt-2")
            span= user.name
            span &nbsp;
            a(class="btn btn-primary btn-sm", href='/users/'+ user.id) Chi tiết
            span &nbsp;
            a(class="btn btn-success btn-sm", href='/users/'+ user.id +'/update') Cập nhật
            span &nbsp;
            a(class="btn btn-danger btn-sm", href='/users/'+ user.id+'/delete') Xoá
          
